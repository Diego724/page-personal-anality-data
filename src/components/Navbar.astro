<script is:inline>
    // Define functions globally or in scope
    const handleToggleClick = () => {
        const element = document.documentElement;
        element.classList.toggle("dark");

        const isDark = element.classList.contains("dark");
        localStorage.setItem("theme", isDark ? "dark" : "light");

        updateThemeIcon(isDark);
    };

    const updateThemeIcon = (isDark) => {
        const sunIcon = document.querySelector(".sun-icon");
        const moonIcon = document.querySelector(".moon-icon");
        if (sunIcon && moonIcon) {
            if (isDark) {
                sunIcon.classList.remove("hidden");
                moonIcon.classList.add("hidden");
            } else {
                sunIcon.classList.add("hidden");
                moonIcon.classList.remove("hidden");
            }
        }
    };

    const initTheme = () => {
        const btn = document.getElementById("theme-toggle");
        if (btn) {
            // Remove old listeners if any (not easily possible with anonymous, but re-adding is fine if cleaned up or unique)
            // Actually, Astro pages might re-run inline scripts on navigation in some modes, but here it is standard MPA.
            btn.addEventListener("click", handleToggleClick);
        }

        // Initialize icon
        updateThemeIcon(document.documentElement.classList.contains("dark"));
    };

    if (document.readyState === "loading") {
        document.addEventListener("DOMContentLoaded", initTheme);
    } else {
        initTheme();
    }

    // Also listen for Astro page swaps if using View Transitions (just in case future proofing)
    document.addEventListener("astro:page-load", initTheme);
</script>

