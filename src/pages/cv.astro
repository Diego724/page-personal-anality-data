---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Curriculum Vitae | Diego Granobles">
    <Navbar />
    <main class="cv-page">
        <div class="container">
            <div class="cv-header">
                <h1>Mi Curriculum Vitae</h1>
                <p>
                    Puedes ver mi experiencia detallada a continuaci√≥n o
                    descargar el archivo en formato PDF.
                </p>
                <a
                    href="/Diego%20Granobles%20CV.pdf"
                    download="Diego_Granobles_CV.pdf"
                    class="btn-download"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="icon"
                        ><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"
                        ></path><polyline points="7 10 12 15 17 10"
                        ></polyline><line x1="12" y1="15" x2="12" y2="3"
                        ></line></svg
                    >
                    Descargar PDF
                </a>
            </div>
        </div>
    </main>
    <Footer />
</Layout>

<style>
    .cv-page {
        padding-top: 2rem;
        min-height: 80vh;
    }

    .cv-header {
        text-align: center;
        margin-bottom: 3rem;
        padding: 2rem;
        background: var(--card-bg);
        border-radius: 20px;
        border: 1px solid var(--border-color);
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
    }

    h1 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        color: var(--text-color);
    }

    p {
        font-size: 1.1rem;
        color: var(--text-muted);
        margin-bottom: 2rem;
    }

    .btn-download {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        background: var(--primary);
        color: white;
        padding: 0.75rem 2rem;
        border-radius: 999px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 6px -1px rgba(59, 130, 246, 0.4);
    }

    .btn-download:hover {
        transform: translateY(-2px);
        background: var(--primary-hover);
        box-shadow: 0 10px 15px -3px rgba(59, 130, 246, 0.5);
    }

    @media (max-width: 768px) {
        .cv-header {
            padding: 1.5rem;
        }

        h1 {
            font-size: 2rem;
        }
    }
</style>
